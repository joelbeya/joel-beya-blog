{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  {% if error %}
      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}
  <div class="w3-card-4 w3-padding-16 w3-white" style="width:40%; margin:auto">
    <h1 class="w3-xxxlarge w3-center"><b>Log In</b></h1>
    <p class="w3-center"> <b>Please Log into to get the user large permission over the site.</b></p>
    <p class="w3-center"> <b>If not a user yet, please subscribe  ==> </b><a href="{{ path('fos_user_registration_register') }}"><i class="fa fa-user"></i> Register</a></p>
    <hr>
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="input-field col s12 m6 l6">
            <label for="username"><b>{{ 'security.login.username'|trans }}</b></label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>

        <div class="input-field col s12 m6 l6">
            <label for="password"><b>{{ 'security.login.password'|trans }}</b></label>
            <input type="password" id="password" name="_password" required="required" />
        </div>
        <br>
        <div class="checkbox">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
        <br>
        <div class="input-field col s12 m12 l12">
          <input type="submit"
                 style="width: 100%;"
                 class="btn btn-success"
                 id="_submit"
                 name="_submit"
                 value="{{ 'security.login.submit'|trans }}" />
        </div>
    </form>
    <br>
    <p class="w3-center">Or</p>
    <div class="input-field col s12 m12 l12">
      <a style="width: 100%;"  class="btn btn-primary" href="{{ path('fos_user_registration_register') }}">Register</a>
    </div>
  </div>
    <hr>
{% endblock fos_user_content %}
